@model string

@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@section JavascriptInHead
{
    <script src="~/Scripts/controllers/stats-controller.js"></script>
    <script type="text/javascript">
        statsModule.factory('bootstrappedData', function() {
            return {
                players: @Html.Raw(Model)
            };
        });
    </script>

}
<table class="table table-striped table-hover" ng-controller="StatsController">
    <thead>
        <tr>
            <th>#</th>
            <th>Имя</th>
            <th>Очки</th>
        </tr>
    </thead>
    <tbody>
        <tr ng-repeat="player in players">
            <td>{{player.number}}</td>
            <td>{{player.name}}</td>
            <td>{{player.points}}</td>
        </tr>
    </tbody>
</table>
